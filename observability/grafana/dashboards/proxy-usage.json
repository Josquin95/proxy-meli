{
  "uid": "proxy-usage",
  "title": "Proxy Usage Dashboard",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "editable": false,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Requests per second (RPS)",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "sum(rate(proxy_request_duration_seconds_count[1m]))",
          "legendFormat": "RPS"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Avg latency (ms)",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 4},
      "targets": [
        {
          "expr": "1000 * sum(rate(proxy_request_duration_seconds_sum[1m])) / sum(rate(proxy_request_duration_seconds_count[1m]))",
          "legendFormat": "avg"
        }
      ]
    },
    {
      "type": "bargauge",
      "title": "Responses by class (last 5m)",
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "sum(increase(proxy_responses_total[5m])) by (status_class)",
          "legendFormat": "{{status_class}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "RPS by method",
      "gridPos": {"x": 0, "y": 4, "w": 16, "h": 8},
      "targets": [
        {
          "expr": "sum by (method) (rate(proxy_requests_total[1m]))",
          "legendFormat": "{{method}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Rate-limit rejections (5m)",
      "gridPos": {"x": 16, "y": 6, "w": 8, "h": 6},
      "targets": [
        {
          "expr": "sum(increase(proxy_rate_limit_rejections_total[5m]))",
          "legendFormat": "rejections"
        }
      ]
    }
  ]
}
